{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=sns-report-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    
    "deploy:dev": "bash ./scripts/deploy-development.sh",
    "deploy:prod": "bash ./scripts/deploy-production.sh",
    "deploy": "npm run deploy:prod",
    
    "backup:prod": "bash ./scripts/backup-production.sh",
    
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    
    "db:migrate:local": "wrangler d1 migrations apply sns-report-production --local",
    "db:migrate:dev": "wrangler d1 migrations apply sns-report-development --remote",
    "db:migrate:prod": "wrangler d1 migrations apply sns-report-production --remote",
    
    "db:seed:local": "wrangler d1 execute sns-report-production --local --file=./seed.sql",
    "db:seed:dev": "wrangler d1 execute sns-report-development --remote --file=./seed.sql",
    "db:seed:prod": "wrangler d1 execute sns-report-production --remote --file=./seed.sql",
    
    "db:console:local": "wrangler d1 execute sns-report-production --local",
    "db:console:dev": "wrangler d1 execute sns-report-development --remote",
    "db:console:prod": "wrangler d1 execute sns-report-production --remote",
    
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:local",
    
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "git:commit": "git add . && git commit -m"
  },
  "dependencies": {
    "hono": "^4.10.5"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}